{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "lib": [
      "es2018",
      "es2020",
      "esnext"
    ],
    "removeComments": true,
    "sourceMap": true,
    "noEmit": false,
    "allowJs": false,
    "outDir": "./.next/nest",
    "baseUrl": "./",
    "experimentalDecorators": true
  },
  "include": [
    "apps",
    "typings/global.d.ts"
  ],
  "exclude": [
    ".next",
    "node_modules",
    "__tests__",
    "__mocks__",
    "**/*.spec.*",
    "**/*.test.*",
    "jest.setup.ts",
    ".local"
  ]
}
