{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "ES5",
      "ES6",
      "ES7",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext"
    ],
    "removeComments": true,
    "sourceMap": true,
    "noEmit": false,
    "allowJs": false,
    "outDir": "./.next/nest",
    "baseUrl": "./",
    "experimentalDecorators": true
  },
  "include": [
    "apps",
    "typings/global.d.ts"
  ],
  "exclude": [
    ".next",
    "node_modules",
    "__tests__",
    "__mocks__",
    "**/*.spec.*",
    "**/*.test.*",
    "jest.setup.ts",
    ".local"
  ]
}
