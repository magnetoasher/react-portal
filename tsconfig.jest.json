{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es2017"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    ".nest",
    ".next",
    "node_modules",
    "target"
  ]
}
