{
  "private": true,
  "name": "ark",
  "version": "3.1.0",
  "scripts": {
    "dev": "nodemon --inspect server/main.ts",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "cross-env NODE_ENV=production node .next/production-server/main.js",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint --ignore-path .gitignore --fix \"{lib,pages,server}/**/*.{js,jsx,ts,tsx}\"",
    "storybook": "start-storybook",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path .gitignore --write",
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ],
    "*.{md,html}": [
      "prettier --ignore-path .gitignore --write",
      "git add"
    ]
  },
